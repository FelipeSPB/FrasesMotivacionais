<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_indigo"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <TextView
         android:id="@+id/phrase_famous"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="10dp"
         app:layout_constraintTop_toBottomOf="parent"
         app:layout_constraintBottom_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/magenta"
        android:text="@string/phrase_phrase_act"
         android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
         android:textAlignment="center"/>
    <TextView
        android:id="@+id/writer_famous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/phrase_famous"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/writer_phrase_act"
        android:fontFamily="cursive"
        android:textColor="#000"
        android:textSize="30sp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/button_share"
        android:drawableStart="@drawable/share_variant"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:backgroundTint="@color/magenta"
        app:layout_constraintTop_toBottomOf="@+id/writer_famous"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/button_share"
        android:textSize="15sp"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>